{% include "layouts/base.twig" %} {% block content %} {# data: first_name
insertion last_name score_created_at value #}

<main class="flex flex-col">
	<section class="flex gap-2">
		<h1>Overzicht uitslag</h1>
		<form method="post" action="{{ globals.urlRoot }}/result/edit/{{ person }}">
			<select name="date">
				<option value="all">Alle data</option>
				{% for date in personScores %}
				<option value="{{ date.score_created_at }}">
					{{ date.score_created_at }}
				</option>
				{% endfor %}
			</select>
			<input type="submit" value="Zoek" />
		</form>
	</section>
	<section>
		{% if personScores is empty %}
		<span> Er zijn geen resultaten </span>
		{% else %}
		<table>
			<thead>
				<tr>
					<th>Voornaam</th>
					<th>Tussenvoegsel</th>
					<th>Achternaam</th>
					<th>Score</th>
					<th>Datum</th>
					<td></td>
				</tr>
			</thead>
			<tbody>
				{% for result in personScores %}
				<tr>
					<td>{{ result.first_name }}</td>
					<td>{{ result.insertion }}</td>
					<td>{{ result.last_name }}</td>
					<td>{{ result.value }}</td>
					<td>{{ result.score_created_at }}</td>
					<td>
						<a href="{{ globals.urlRoot }}/result/update/{{ result.score_id }}"
							>Wijzig</a
						>
					</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
		{% endif %}
	</section>
</main>
{% endblock %}
